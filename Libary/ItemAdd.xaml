<Page x:Class="Libary.ItemAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Libary"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ItemAdd">

    <Grid x:Name="Items">
        <Label x:Name="lblISBN" Content="ISBN:" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" FontSize="14"/>
        <Label x:Name="lblTitle" Content="Title:" HorizontalAlignment="Left" Grid.Column="3" Grid.Row="1" FontSize="14" />
        <Label x:Name="lblGenre" Content="Genre:" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3" FontSize="14" />
        <Label x:Name="lblAuthor" Content="Author:" HorizontalAlignment="Left" Grid.Column="3" Grid.Row="3" FontSize="14" />
        <Label x:Name="lblCopiesAv" Content="Copies Available:" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="5" FontSize="14"/>
        <Label x:Name="lblPublicationDate" Content="Publication Date:" HorizontalAlignment="Left" Grid.Column="3" Grid.Row="5" FontSize="14" />

        <TextBox x:Name="txtISBN"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" FontSize="14" Margin="5" Width="40"  />
        <TextBox x:Name="txtTitle"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="1" FontSize="14" Margin="5" Width="40"   />
        <TextBox x:Name="txtGenre"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3" FontSize="14"  Margin="5" Width="40"  />
        <TextBox x:Name="txtAuthor"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="3" FontSize="14" Margin="5" Width="40"/>
        <TextBox x:Name="txtCopiesAv"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="5" FontSize="14" Margin="5" Width="40"/>
        <TextBox x:Name="txtPublicationDate"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="5" FontSize="14" Margin="5" Width="40"/>

        <Button x:Name="btnAddItem" Content="Add" Margin="5" Grid.Column="4" Grid.Row="7" FontSize="12" Grid.ColumnSpan="2" Click="btnAddItem_Click" />

        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Page>
