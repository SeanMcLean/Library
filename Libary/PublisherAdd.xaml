<Page x:Class="Libary.PublisherAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Libary"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="500"
      Title="PublisherAdd">

    <Grid x:Name="Items">
        <Label x:Name="lblName" Content="Name:" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" FontSize="12"/>
        <Label x:Name="lblTelephone" Content="Telephone:" HorizontalAlignment="Left" Grid.Column="3" Grid.Row="1" FontSize="12" />
        <Label x:Name="lblEmail" Content="Email:" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3" FontSize="12" />
        <Label x:Name="lblAddress" Content="Address:" HorizontalAlignment="Left" Grid.Column="3" Grid.Row="3" FontSize="12" />

        <TextBox x:Name="txtName"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" FontSize="12" Margin="5,5,0,5" Width="85" Grid.ColumnSpan="2"  />
        <TextBox x:Name="txtTelephone"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="1" FontSize="12" Margin="5,5,-4,5" Width="101" Grid.ColumnSpan="2"   />
        <TextBox x:Name="txtEmail"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="3" FontSize="12" Margin="4.667,5,0,4.667" Width="88" Grid.ColumnSpan="2"   />
        <TextBox x:Name="txtAddress1"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="3" FontSize="12" Margin="4.667,5,-3,4.667" Width="101" Grid.ColumnSpan="2"  />
        <TextBox x:Name="txtAddress2"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="4" FontSize="12" Margin="4.667,5.333,0,5.333" Width="98" Grid.ColumnSpan="2"  />
        <TextBox x:Name="txtAddress3"  HorizontalAlignment="Left" Grid.Column="4" Grid.Row="5" FontSize="12" Margin="4.667,4.667,0,5" Width="98" Grid.ColumnSpan="2"  />

        <Button x:Name="btnAddItem" Content="Add" Margin="5" Grid.Column="4" Grid.Row="12" FontSize="12" Grid.ColumnSpan="2" Click="btnAddPublisher_Click" />

        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="85*"/>



        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Page>
